<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
	<%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div class="container">
	
    <section class="round">
		<%= render 'layouts/header' %>
		<section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
	</section>
	  
	<section class="round">
		<%= render 'layouts/footer' %>
	</section>
    
	</div>
  </body>
</html>


