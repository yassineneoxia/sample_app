<tr>
  <td class="issue">
    <span class="content"><%= issue.content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(issue.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(issue.user) %>
  <td>
    <%= link_to "delete", issue, :method => :delete,
                                     :confirm => "Are you sure you want to delete this issue?",
                                     :title => issue.content %>
  </td>
  <% end %>
</tr>
