<table summary="Information about following/followers">  <tr>    <td class="main">      <h1><%= @title %></h1>      <% unless @users.empty? %>        <ul class="users">		<% @users.each do |user| %>			<li>				<%= gravatar_for user, :size => 30 %>				<%= link_to user.name, user %>				<% if current_user.admin? %>					| <%= link_to "delete", user, :method => :delete, :confirm => "Are you sure you want to delete '#{user.name}'?",                                :title => "Delete #{user.name}" %>				<% end %>			</li>		<% end %>        </ul>        <%= will_paginate @users %>      <% end %>    </td>    <td class="sidebar round">      <strong>Name</strong> <%= @user.name %><br />      <strong>URL</strong> <%= link_to user_path(@user), @user %><br />      <strong>Issues</strong> <%= @user.issues.count %>      <%= render 'shared/stats' %>      <% unless @users.empty? %>        <% @users.each do |user| %>          <%= link_to gravatar_for(user, :size => 30), user %>        <% end %>      <% end %>    </td>  </tr></table>